<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppShopping_.Views.PratosPrincipaisDetail"
             xmlns:viewModel="clr-namespace:AppShopping_.ViewModel"             
             >
    <Shell.TitleView>
        <ContentView>
            <Image Source="Japao" HorizontalOptions="End" VerticalOptions="Center" HeightRequest="0"></Image>
        </ContentView>
    </Shell.TitleView>
    
    <ContentPage.BindingContext>
        <viewModel:PratosPrincipaisDetailViewModel></viewModel:PratosPrincipaisDetailViewModel>
    </ContentPage.BindingContext>
   
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Pratos Principais" />
            <Label Text="{Binding PratosPrincipais.Name}" TextColor="Black"></Label>
            <Label Text="{Binding Name}"/>
            <Label Text="{Binding Description}" MaxLines="2"/>
          
            <Frame>

                <Grid>
               
                    
                </Grid>
                
                
            </Frame>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>